pipeline {
    // add your slave label name
    agent { label 'my_maven_slave'}
    tools{
        maven 'maven-test'
    }
    stages {
        stage ('Checkout SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Build') {

            steps {
               sh 'mvn package'
            }
        }
        
        stage ('deploy') {

            steps {
               sshagent(['Tomact_server']) {
          sh "scp -o StrictHostKeyChecking=no  target/maven-web-application.war  ec2-user@34.207.81.39:/opt/tomcat9/webapps"
                    
            }
        }

        
    }
}
